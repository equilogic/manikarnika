<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!-- Daily Collection wizard report -->
        <record id="daily_collection_wiz_form_view" model="ir.ui.view">
            <field name="name">daily.collection.wiz.form.view</field>
            <field name="model">daily.collection.wiz</field>
            <field name="arch" type="xml">
                <form string="Daily Collection Wizard">
                    <group col="4" string="Dates">
                        
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group  col="4" >
                        <field name="driver_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' domain="[('driver','=',True)]"/>
                        <field name="vehicle_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' />
                    </group>
                    <footer>
                        <button name="print_report" type="object" string="Print Report" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

		<!--   Daily Collection wizard action -->
		
        <record id="daily_collection_wizard_action" model="ir.actions.act_window">
            <field name="name">Daily Collection Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily.collection.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <!-- Menu of Order summary report wizard -->
        
        <menuitem id="daily_collection_wiz_menu" 
                    action="daily_collection_wizard_action" parent="menu_of_report" />
                    
    </data>
</openerp>