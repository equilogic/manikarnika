<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_report_obs_wizard" model="ir.ui.view">
			<field name="name">Outstanding Balance Sheet </field>
			<field name="model">report.obs.wizard</field>
			<field name="arch" type="xml">
				<form string="Select Customer">
					<group colspan="4">
						<field name="shop_name"
							options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
							domain="[('customer','=',True)]" />
					</group>
					<footer>
						<button name="view_report" type="object" string="View Report"
							class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_report_obs_wizard" model="ir.actions.act_window">
			<field name="name">Outstanding Balance Sheet Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.obs.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<!-- Menu of Outstanding Balance Sheet Wizard -->
		<menuitem id="out_balance_sheet_menu" action="action_report_report_obs_wizard"
			parent="manikarnika_report.menu_of_report" />
	</data>
</openerp>