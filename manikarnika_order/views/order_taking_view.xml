<openerp>
    <data>
    
        <!-- Menu for Order Tacking -->
        <menuitem id="order_tacking_main_menu" name="Order Taking" />
        <menuitem id="order_tacking_menu" name="Order Taking"
                    parent="order_tacking_main_menu" sequence="1"/>

        <menuitem id="order_tacking_configuration_menu" name="Configuration"
                    parent="order_tacking_main_menu" sequence="50" />
                            
		<menuitem id="menu_of_vehicle_allocation" parent="order_tacking_main_menu" name="Vehicle Allocation" sequence="20"/>
                                            
        <!-- form view of order tacking -->
        <record id="order_tacking_form_view" model="ir.ui.view">
            <field name="name">order.tacking.form.view</field>
            <field name="model">order.tacking</field>
            <field name="arch" type="xml">
                <form string="Order Taking">
                    <header>
                        <button string="Confirm" name="ord_track_draft_to_confirm"
                            type="object" states="draft" class="oe_highlight"/>
                        <button string="Complete" name="ord_track_confirm_to_complete"
                            type="object" states="confirm" class="oe_highlight"/>
                        <button string="Reset to Draft" name="ord_track_confirm_to_draft"
                            type="object" states="confirm" class="oe_highlight"/>
                        <button string="Cancel" name="ord_track_confirm_to_cancel"
                            type="object" states="confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group colspan="4" col="4" >
                                <field name="partner_id" domain="[('customer','=', True)]" required="1"/>
                                <field name="driver_id" domain="[('driver','=', True)]"/>
                                <field name="order_date" required="1"/>
                        </group>
                        <notebook>
                            <page string="Manikarnika" >
                                <field name="morder_tacking_line_ids" context="{'order_date': order_date}">
                                    <tree string="Manikarnika Order Taking Line" editable="bottom">
                                        <field name="product_id" readonly="1"/>
                                        <field name="qty_aval" readonly="1"/>
                                        <field name="default_order_qty" readonly="1"/>
                                        <field name="order_price" readonly="1"/>
                                        <field name="order_qty" />
                                        <field name="order_date_line" />
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Grains">
                                <field name="gorder_tacking_line_ids" context="{'order_date': order_date}">
                                    <tree string="Gariners Order Taking Line" editable="bottom">
                                        <field name="product_id" readonly="1"/>
                                        <field name="qty_aval" readonly="1"/>
                                        <field name="default_order_qty" readonly="1"/>
                                        <field name="order_price" readonly="1"/>
                                        <field name="order_qty" />
                                        <field name="order_date_line" />
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view of order tacking -->
        <record id="order_tacking_tree_view" model="ir.ui.view">
            <field name="name">order.tacking.tree.view</field>
            <field name="model">order.tacking</field>
            <field name="arch" type="xml">
                <tree string="Order Taking">
                    <field name="name"/>
                    <field name="partner_id" />
                    <field name="order_date" />
                </tree>
            </field>
        </record>

        <!--  Order Tracking Search View -->
        <record id="order_tacking_search_view" model="ir.ui.view">
            <field name="name">order.tracking.search</field>
            <field name="model">order.tacking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id"/>
                    <field name="order_date"/>
                    <filter string="Today Order" name="today_order" domain="[('order_date','=', datetime.datetime.now())]"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" context="{'group_by':'partner_id'}"/>
                        <filter string="Order Date" context="{'group_by':'order_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Order Tacking Action -->
        <record id="order_tacking_action" model="ir.actions.act_window">
            <field name="name">Order Taking</field>
            <field name="res_model">order.tacking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_today_order":1}</field>
        </record>

                    
        <menuitem id="order_tacking_action_menu" name="Order Taking"
                    action="order_tacking_action" parent="order_tacking_menu" />

        <!-- Product Form-->
        <record id="product_template_inherited" model="ir.ui.view">
            <field name="name">product template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='type']" position="after">
                    <field name="default_qty"/>
                </xpath>
            </field>
        </record>
        
        
        <!-- form view of location -->
        <record id="location_form_view" model="ir.ui.view">
            <field name="name">location.location.form.view</field>
            <field name="model">location.location</field>
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <group>
                           <field name="name" required="1"/>
                           <field name="code" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view of location -->
        <record id="location_tree_view" model="ir.ui.view">
            <field name="name">location.location.tree.view</field>
            <field name="model">location.location</field>
            <field name="arch" type="xml">
                <tree string="Location">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <!-- Order location Action -->
        <record id="location_action" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="res_model">location.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu of location -->
        <menuitem id="location_action_menu" name="Location"
                    action="location_action" parent="order_tacking_configuration_menu" />
                    
       <!--  vehicle allocation form -->
       
       <record id="vehicle_allocation_form" model="ir.ui.view">
       		<field name="name">vehicle.allocation.form</field>
       		<field name="model">vehicle.allocation</field>
       		<field name="arch" type="xml">
       			<form string="Vehical Allocation">
                    <header>
                        <button string="Confirm" name="ord_track_draft_to_confirm"
                            type="object" states="draft" class="oe_highlight"/>
                        <button string="Reset to Draft" name="ord_track_confirm_to_draft"
                            type="object" states="confirm" class="oe_highlight"/>
                        <button string="Cancel" name="ord_track_confirm_to_cancel"
                            type="object" states="confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>       			
       				<sheet>
       					<group colspan="4" col="4">
       						<field name="name" />
		       				<field name="vehicle_id" required="1" attrs="{'readonly': [('state','not in','draft')]}"/>
		       				<field name="order_date" required="1" attrs="{'readonly': [('state','not in','draft')]}"/>
		       				<field name="driver_id" domain="[('driver','=',True)]" attrs="{'readonly': [('state','not in','draft')]}"/>
	       				</group>
                        <notebook>
                            <page string="Vehicle Allocation" >
                                <field name="vehicle_allocation_line_ids" attrs="{'readonly': [('state','not in','draft')]}">
                                    <tree string="Vehical allocation" editable="bottom">
                                        <field name="product_id" />
                                        <field name="units"/>
                                        <field name="order_qty" invisible="1"/>
                                        <field name="order_carton"/>
                                        <field name="extra_carton"/>
                                        <field name="total_carton"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>	       				
       				</sheet>
       			</form>
       		</field>
       </record> 
       
       <!--  vehicle allocation tree -->
     <record id="vehicle_allocation_tree" model="ir.ui.view">
       		<field name="name">vehicle.allocation.tree</field>
       		<field name="model">vehicle.allocation</field>
       		<field name="arch" type="xml">
       			<tree string="Vehicle Allocation">
       				<field name="name"/>
	       			<field name="vehicle_id"/>
	       			<field name="order_date"/>
	       			<field name="driver_id"/>       			
       			</tree>

       		</field>
       </record>      
       
        <!--  Vehicle Allocation Search View -->
        <record id="vehicle_allocation_view" model="ir.ui.view">
            <field name="name">vehicle.allocation.search</field>
            <field name="model">vehicle.allocation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="order_date"/>
                    <filter string="Today Allocation" name="today_allocation" domain="[('order_date','=', datetime.datetime.now())]"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" context="{'group_by':'driver_id'}"/>
                        <filter string="Order Date" context="{'group_by':'order_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="vehicle_allocation_action" model="ir.actions.act_window">
            <field name="name">Vehicle Allocation</field>
            <field name="res_model">vehicle.allocation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_today_allocation":1}</field>
        </record>   
        
        <menuitem id="vehicle_allocation_menu" name="Vehicle Allocation"
                    action="vehicle_allocation_action" parent="menu_of_vehicle_allocation" />
                    

		<!-- Inherited form view of stock.location -->
		 <record id="inherited_form_view_stock_location" model="ir.ui.view">
            <field name="name">inherited.form.view.stock.location</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="vehicle_id" invisible="1"/>
                </xpath>
            </field>
        </record>
        
        <!-- Inherited form view of res.user -->
        <record id="inherited_form_view_res_users" model="ir.ui.view">
            <field name="name">inherited.form.view.res.users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_driver" />
                </xpath>
                <xpath expr="//label[@for='login']" position="attributes">
                    <attribute name="string">Login</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
