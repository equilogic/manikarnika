<openerp>
    <data>
    
        <!-- Partner Form Inherit -->
        <record id="fleet_vehicle_form_driver" model="ir.ui.view">
            <field name="name">fleet.vehicle.inherit.driver</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_form"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='driver_id']" position="attributes">
					<attribute name="domain">[('driver','=', True)]</attribute>
				</xpath>
            </field>
        </record>
               
               
        <record id="action_driver_form" model="ir.actions.act_window">
            <field name="name">Drivers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('driver','=', True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
          
		<menuitem action="action_driver_form" parent="fleet.fleet_vehicles" id="fleet_vehicle_driver_menu"/>
                                    
    </data>
</openerp>
