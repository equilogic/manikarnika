<openerp>
    <data>
    
        <!-- Partner Form Inherit -->
        <record id="view_partner_form_inherit_location" model="ir.ui.view">
            <field name="name">res.partner.form.location.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="website" position="after">
                    <field name="location_id"/>
                    <field name="driver"/>
                </field>
            </field>
        </record>

        <!-- Company Form Inherit -->
        <record id="view_company_form_inherit_comp_code" model="ir.ui.view">
            <field name="name">res.partner.form.compcode.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="comp_code" required="1"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
