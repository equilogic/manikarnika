    <!-- **************************** Delivery Schedule Manikarnika  **********************************-->
    <t t-name="DeliveryManikarnikaTemp">
        <table width="100%">
            <tr>
                <td colspan="3" >
                    <h1 class="h1">
                        <center>
                            <button id="left_panel_toggle">Left Panel Hide/Show</button> 
                            Delivery Schedule Manikarnika 
                        </center>
                    </h1>
                </td>
            </tr>
            <tr>
                <td width="2%"></td>
                <td width="20%">
                     <input class="form-control orddate input_style" id="datepicker" name="orderdate" placeholder="Select Date"/>
                </td>
                <td>
                     <button type="button" class="searchbtn" id="search">Search</button>
                </td>
            </tr>
        </table>
        <table width="100%" id="DeliveryManikarnikaTempline"></table>
