<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- **************************** Manikarnika Orders Interface  **********************************-->
    <t t-name="ManikarnikaOrders">
        <table width="100%">
            <tr>
                <td>
                    <h1 class="h1">
                        <center>
                            <button id="left_panel_toggle">Left Panel Hide/Show</button>
                            Manikarnika Order Interface
                        </center>
                    </h1>
                </td>
            </tr>
        </table>
        <table width="100%" id="ManikarnikaOrdersLines"></table>
    </t>
    <t t-name="ManikarnikaOrdersLines">
        <tr>
            <td width="2%"></td>
            <td width="96%">
                <div class="table_list">
                    <table class="scr" width="100%" >
                        <thead>
                            <tr>
                                <td class="customer_label" rowspan="2">
                                    Customers
                                </td>
                                <t t-foreach="widget.manik_product_lst" t-as="qty">
                                    <td class="pro_qty">
                                        <h4><t t-esc="qty['default_qty']"></t></h4>
                                    </td>
                                </t>
                                <td colspan="3" style="background:#167F92;"></td>
                            </tr>
                            <tr>
                                <t t-foreach="widget.manik_product_lst" t-as="pro">
                                    <td class="pro_nm">
                                        <h4><t t-esc="pro['product_nm']"></t></h4>
                                    </td>
                                </t>
                                <td class="pro_nm total">
                                    <h3>Shop Total</h3>
                                </td>
                                <td colspan="2" width="2%" style="background:#167F92;"></td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="widget.manik_order_dict" t-as="order">
                                <tr>
                                    <td class="customer_lst">
                                        <h4><t t-esc="order"/></h4>
                                    </td>
                                    <t t-foreach="widget.manik_order_dict[order]" t-as="column">
                                        <t t-if="column['product_lst']">
                                            <t t-foreach="column['product_lst']" t-as="pro">
                                                <td class="input_td">
                                                    <input step="0.00" min="0" style="text-align: right;" data-input='false' type="text" class="input_style form-control" t-att-id="pro['product_id']" model="morder.tacking.line" t-att-value="pro['order_qty']" readonly='readonly'></input>
                                                </td>
                                            </t>
                                        </t>
                                        <t t-if="column['manik_qty']">
                                            <td class="right_side total_qty">
                                                <h4 class="total_style"><t t-esc="column['manik_qty']"/></h4>
                                            </td>
                                        </t>
                                        <t t-if="!column['manik_qty']">
                                            <td class="total_qty"><h4 class="total_style">0</h4></td>
                                        </t>
                                        <td class="input_td">
                                            <button  id="edit"><i class="fa fa-2x fa-pencil-square-o" aria-hidden="true"></i></button>
                                        </td>
                                        <t t-if="column['customer_id']">
                                            <td style="display:none;background:Lavender;" class="input_td">
                                                <button  id="save"  style="visibility:hidden" t-att-data-dic="column['customer_id']"><i class="fa fa-2x fa-floppy-o"  aria-hidden="true"></i></button>
                                            </td>
                                        </t>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr style="background:#167F92 !important;" >
                                <td class="item_tot">
                                    <h4>Item Total</h4>
                                </td>
                                <t t-foreach="widget.item_total" t-as="val">
                                    <td class="right_side">
                                        <h4 class="total_style"><t t-esc="widget.item_total[val]"/></h4>
                                    </td>
                                </t>
                                <td style="background:#167F92;" colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </td>
            <td width="2%"></td>
        </tr>
    </t>

