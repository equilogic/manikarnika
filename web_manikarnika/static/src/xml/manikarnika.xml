    <t t-name="DeliveryManikarnikaTempline">
        <tr>
            <td width="2%"></td>
            <td width="96%" >
                <div class="delivery_table_list">
                    <table class="scr" width="100%">
                        <thead>
                            <tr>
                                <td rowspan="2" class="customer_label">
                                     Customers
                                </td>
                                <t t-foreach="widget.product" t-as="val">
                                    <td class="pro_qty">
                                        <h4><t t-esc="widget.product[val]"/></h4>
                                    </td>
                                </t>
                                <td style="background:#167F92;" colspan="3"></td>
                            </tr>
                            <tr>
                                <t t-foreach="widget.product" t-as="prod">
                                    <td class="pro_nm">
                                        <h4><t t-esc="prod"></t></h4>
                                    </td>
                                </t>
                                <td rowspan="2" class="pro_nm" style="display:none;">
                                    <h3>Driver</h3>
                                </td>
                                <td rowspan="2" class="pro_nm" style="background:#167F92 !important;color:white !important;border-color: #4c4c4c;">
                                    <h3>Shop Total</h3>
                                </td>
                                <td rowspan="2" colspan="2" width="1%" style="background:#167F92;"></td>
                            </tr>
                        </thead>
                    <tbody>
                        <t t-foreach="widget.orders" t-as="order">
                            <tr>
                                <td class="customer_lst">
                                    <h4><t t-esc="order"/></h4>
                                </td>
                                <t t-foreach="widget.orders[order]" t-as="column">
                                    <t t-if="((!column['manik_qty']) and (!column['driver_list']))">
                                        <td id="ipt_td_manik" class="input_td">
                                            <input type="text" min="0" style="text-align: right;" class="form-control input_style" t-att-id="column['id']" data-input="false" model="morder.tacking.line" t-att-value="column['qty']" readonly='readonly'></input>
                                        </td>
                                    </t>
                                    <t t-if="(column['driver_list'])">
                                        <td style="display:none;">
                                            <select class="form-control dri" t-att-id="column['order_id']" model="order.tacking" disabled="disabled">
                                                <option/>
                                                <t t-foreach="column['driver_list']" t-as="driver">
                                                    <t t-if="column.driver_id == driver.dr_id">
                                                        <option t-att-value="driver['dr_id']" t-att-selected=" 'selected'">
                                                            <t t-esc="driver['driver_nm']"/>
                                                        </option>
                                                    </t>
                                                    <t t-if="column.driver_id != driver.dr_id">
                                                        <option t-att-value="driver['dr_id']">
                                                            <t t-esc="driver['driver_nm']"/>
                                                        </option>
                                                    </t>
                                                </t>
                                                <option/>
                                            </select>
                                        </td>
                                    </t>
                                    <t t-if="(column['manik_qty'] == 0)" ><td class="total_qty"><h4 class="total_style">0</h4></td></t>
                                    <t t-if="column['manik_qty']">
                                        <td class="right_side total_qty">
                                            <h4 class="total_style"><t t-esc="column['manik_qty']"/></h4>
                                        </td>
                                    </t>
                                </t>
                                <td class="input_td">
                                    <button  id="edit"><i class="fa fa-2x fa-pencil-square-o" aria-hidden="true"></i></button>
                                </td>
                                <td style="display:none;background:Lavender;" class="input_td">
                                   <button  style="visibility:hidden"  id="save"><i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i></button>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr style="background:#167F92 !important;order-color: #4c4c4c;">
                            <td class="item_tot">
                                <h4>Item Total</h4>
                            </td>
                            <t t-foreach="widget.item_dic" t-as="val">
                                <td class="right_side">
                                    <h4 class="total_style"><t t-esc="widget.item_dic[val]"/></h4>
                                </td>
                            </t>
                            <td style="background:#167F92;" colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </td>
        <td width="2%"></td>
        </tr>
    </t>

